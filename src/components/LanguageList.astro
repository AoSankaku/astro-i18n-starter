---
import { getLocalePaths, LOCALES } from "@/i18n";
---

<ul>
  {
    getLocalePaths(Astro.url).map(({ path, lang }) =>
      lang === Astro.currentLocale ? null : (
        <li>
          <a href={path}>{LOCALES[lang].label}</a>
        </li>
      )
    )
  }
</ul>

<style>
  a {
    display: block;
    margin-top: var(--sp-l);
    padding: 0.5em;
    background-color: color-mix(in srgb, var(--color-main) 10%, transparent);
    border-radius: var(--r-m);
    text-align: center;
    opacity: 0.7;

    &:hover {
      opacity: 1;
    }

    span {
      margin-inline: -0.1em 0.2em;
      opacity: 0.4;
    }
  }
</style>
