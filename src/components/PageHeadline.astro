---
// UI used for heading title on each page.

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header>
  <h1>{title}</h1>
  <slot />
</header>

<style>
  header {
    position: relative;
    overflow: hidden;
    padding-block: var(--sp-l);
    padding-inline: var(--sp-s);
    text-align: center;
    border-radius: 16px;
    color: var(--color-theme);
    background-color: color-mix(in srgb, var(--color-accent) 15%, transparent);
    @media (width < 768px) {
      margin-inline: calc(var(--sp-m) * -1);
      border-radius: 0;
    }

    &::before {
      content: "translate";
      font-family: "Material Icons Sharp";
      position: absolute;
      inset: -8px -8px auto auto;
      font-size: 128px;
      line-height: 1;
      pointer-events: none;
      color: var(--color-theme);
      z-index: -1;
      opacity: 0.1;
      filter: blur(4px);
    }
    @media (width < 800px) {
      &::before {
        display: none;
      }
    }

    h1 {
      font-size: 1.6rem;
      letter-spacing: 0.05em;
    }
  }
</style>
